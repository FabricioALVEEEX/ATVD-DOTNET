@using MacLancheFelizFabricio.Models
@model Produto

@{
    ViewData["Title"] = "Cadastrar Produto";
}

<h2 class="mt-4">âž• Cadastrar Novo Produto</h2>

<form asp-action="Create">
    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
 <div class="mb-3">
    <label asp-for="Preco" class="form-label"></label>
    <input asp-for="Preco" class="form-control" type="number" step="0.01" />
    <span asp-validation-for="Preco" class="text-danger"></span>
</div>

    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
